<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="{{ asset('css/tailwind.css') }} ">
  <title>
    {% block title %}L'Amusée Paris | Test Back{% endblock %}
  </title>
</head>

<body class="p-10">

<header class="sticky top-0 bg-gray-50 z-50">
  <nav class="flex flex-col md:flex-row flex-wrap justify-around">
    {# logo #}
    <div class="py-2">
      <a href="#" class="text-center">
        <img class="ml-2 md:ml-0" src="{{ asset('assets/img/logo.png') }}" alt="logo">
      </a>
    </div>
    {# lien text #}
    <div class="flex justify-center mb-7 md:mb-0">
      <ul class="flex flex-col sm:flex-row sm:gap-10 md:items-center">
        <li>
          <a href="#">La Mariée</a>
        </li>
        <li>
          <a href="#">Robes en couleur</a>
        </li>
        <li>
          <a href="#">La Maison</a>
        </li>
        <li>
          <a href="#">Rendez-vous/Boutique</a>
        </li>
      </ul>
    </div>
    {# lien icon #}
    <div class="flex justify-center">
      <ul class="flex gap-6 md:gap-3 justify-center md:items-center">
        <li>
          <a href="#">
            <img src="{{ asset('assets/img/person.png') }}" alt="Person">
          </a>
        </li>
        <li>
          <a href="#">
            <img src="{{ asset('assets/img/Vector.png') }}" alt="bag">
          </a>
        </li>
        <li>
          <a href="#">
            <img src="{{ asset('assets/img/search.png') }}" alt="search">
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<div class="w-full max-w-md mx-auto mt-10 bg-white rounded-lg p-10">
  <h1 class="text-2xl font-bold mb-6">Formulaire d'ajout d'image</h1>

  {{ form_start(form) }}
  <div class="mb-4">
    {{ form_label(form.texte, 'Texte') }}
    {{ form_widget(form.texte, {'attr': {'class': 'border p-2 w-full'}}) }}
    {{ form_errors(form.texte) }}
  </div>

  <div class="mb-4">
    {{ form_label(form.url, 'URL') }}
    {{ form_widget(form.url, {'attr': {'class': 'border p-2 w-full'}}) }}
    {{ form_errors(form.url) }}
  </div>

  <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Ajouter</button>
  {{ form_end(form) }}
</div>


<footer class="w-full flex flex-col sm:flex-row sm:justify-evenly text-sm p-5 gap-6 top-0 bg-gray-50 z-50">
  <div>
    <ul class="flex flex-col gap-2">
      <a href="#"> <li class="uppercase font-bold mb-4">La Mariée</li> </a>
      <a href="#"><li>Cérémonie</li></a>
      <a href="#"><li>Civil</li></a>
      <a href="#"><li>Accessoire</li></a>
      <a href="#"><li>Seconde Main</li></a>
    </ul>
  </div>
  <div>
    <ul class="flex flex-col gap-2">
      <a href="#"><li class="uppercase font-bold mb-4">Robes en Couleur</li></a>
      <a href="#"><li>Collection 2022</li></a>
      <a href="#"><li>Seconde main couleur</li></a>
      <a href="#"><li>Intemporels</li></a>
    </ul>
  </div>
  <div>
    <ul class="flex flex-col gap-2">
      <a href="#"><li class="uppercase font-bold mb-4">La Maison</li></a>
      <a href="#"><li>Nous</li></a>
      <a href="#"><li>Blog</li></a>
      <a href="#"><li>FAQ</li></a>
      <a href="#"><li>Contact</li></a>
    </ul>
  </div>
  <div>
    <ul class="flex flex-col gap-2">
      <a href="#"><li class="uppercase font-bold mb-4">Rendez-vous / Boutique</li></a>
      <a href="#"><li>Prise de rendez-vous au showroom</li></a>
      <a href="#"><li>Sur-Mesure</li></a>
      <a href="#"><li>Essayage Virtuel</li></a>
    </ul>
  </div>
</footer>

</body>

</html>
